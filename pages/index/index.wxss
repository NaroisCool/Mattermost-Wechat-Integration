/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.basic {
  border-radius: 5px;
  padding: 10px;
  font-size: 1.2em;
  max-height: 60px;
  margin-left: 5px;
  margin-right: 5px;
  height: 80px;
  text-align: left;
  color: white;
}

.basic.blue {
  background-color: rgb(17, 83, 171);
}

.basic.purple {
  background-color: #875a7b;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.footer {
  position: fixed;
  bottom: 0;
  display: flex;
  width: 100%;
  justify-content: center;
}
